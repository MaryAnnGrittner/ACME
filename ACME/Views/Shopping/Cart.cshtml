@model IEnumerable<ACME.Models.ViewModels.Cartvm1>
@{
    ViewBag.Title = "Cart";
}
<style>
    .button {
        background: none !important;
        border: none;
        padding: 0 !important;
        color: #0000FF;
    }

    table {
        text-align: center;
    }

    table, th, td {
        text-align: center;
    }
</style>

<h2>Cart</h2>



    @if (Model.Count() == 0)
    {
        <span style="font-size:large;">No items in Cart</span>
    }
    else
    {
        <table style="width:100%">
            <tr>
                <th></th>
                <th>Product</th>
                <th>Unit Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/Content/Images/Products/@item.Imagefile"
                             style="width:85px; height:100px;" />
                    </td>
                    <td>
                        @Html.ActionLink(@item.Name, "Order", new { id = @item.ProductID })
                        <br />
                        @Html.DisplayFor(modelItem => item.ShortDescription)
                    <td>
                        @Html.DisplayFor(modelItem => item.UnitPrice)
                    </td>
                    <td>
                        <form action="/shopping/cart" method="post">
                            <input type="hidden" name="CartNumber" value="1" />
                            <input type="hidden" name="ProductID" value="@item.ProductID" />
                        <input data-val="true"
                               data-val-range="Quantity invalid"
                               data-val-range-max="99" data-val-range-min="1"
                               data-val-required="Quantity missing" maxlength="2" size="2"
                               id="Quantity" name="Quantity" type="text" value="@item.Quantity" />
                        <br />
                        <span class="field-validation-valid" data-valmsg-for="Quantity"
                              data-valmsg-replace="true"></span>
                        <input type="submit" class="button" name="udaction" value="Update" />
                        <br />
                        <input type="submit" class="button" name="udaction" value="Delete"
                               onclick="return confirm('Are you sure?')" />
                            </form>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalCost)
                    </td>
                    <td>
                        
                    </td>

                </tr>

            }
        </table>
    } @*else*@




       
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script> 